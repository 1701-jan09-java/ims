<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

	    <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
      <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
      
      <property name="hibernate.show_sql">true</property> 
      
      <mapping class="com.ims.domain.Retailer"/>
      <mapping class="com.ims.domain.Supplier"/>
      <mapping class="com.ims.domain.Address"/>
      <mapping class="com.ims.domain.Product"/> 
      <mapping class="com.ims.domain.Category"/>  

      <mapping class="com.ims.domain.Inventory"/>  
      <mapping class="com.ims.domain.PurchaseOrder"/>    
      <mapping class="com.ims.domain.PurchaseOrderLine"/>    
      <mapping class="com.ims.domain.Sale"/>    
      
    
    </session-factory>
</hibernate-configuration>
